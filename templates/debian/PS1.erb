# Check if we are in an interactive shell
if [ -n "$PS1" ];
then
  PS1='<%= scope.lookupvar('bashcolor') %>[${debian_chroot:+($debian_chroot)}\u@<% if @show_fqdn %><%= scope.lookupvar('::fqdn') %><% else %>\h<% end %>: <%= scope.lookupvar('tier').upcase %> ${PWD}]\$ <%= scope.lookupvar('reset') %>'
fi
